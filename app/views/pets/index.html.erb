<h1>Available Pets</h1>

<% @pets.each do |pet| %>

  <h3><%= pet.name %></h3>
  <ul><%= image_tag(pet.image, alt: pet.name, class: "pet-index-image") %> </ul> 
  <ul>Age: <%= pet.age %></ul>
  <ul>Sex: <%= pet.sex %></ul>
  <ul>Shelter: <%= pet.shelter.name %></ul>

  <ul><%= link_to "Edit #{pet.name}", "/shelters/#{pet.id}/edit" %></ul>
  <ul><%= link_to "Delete #{pet.name}", "/shelters/#{pet.id}", method: :delete %></ul>
<% end %>

